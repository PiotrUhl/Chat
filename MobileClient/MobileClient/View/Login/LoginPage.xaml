<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileClient.View.LoginPage"
             Title="Logowanie">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <StackLayout VerticalOptions="Start">
                <Frame BackgroundColor="#2196F3" Padding="0,40,0,40" CornerRadius="0">
                    <Label Text="Logo serwera" HorizontalTextAlignment="Center" TextColor="White" FontSize="46" Margin="0, 0, 0, 0"/>
                </Frame>
                <Label x:Name="ErrorLabel" Text="Błąd logowania" Style="{StaticResource ErrorLabelStyle}" Opacity="0" Padding="0,25,0,0"/>
            </StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand">
                <Label Text="Login:" Style="{StaticResource FormLabelStyle}" Padding="30,0,0,0"/>
                <Entry x:Name="LoginEntry" Style="{StaticResource FormInputStyle}" Margin="30,0,30,0" />
                <Label Text="Hasło:" Style="{StaticResource FormLabelStyle}" Padding="30,0,0,0"/>
                <Entry x:Name="PasswordEntry" Style="{StaticResource FormInputStyle}" Margin="30,0,30,0" />
                <Button x:Name="LoginButton" Text="Zaloguj" Style="{StaticResource ConfirmButtonStyle}" Clicked="LoginButton_Clicked" />
            </StackLayout>
            <StackLayout  VerticalOptions="End">
                <Label Text="Nie masz konta?" Style="{StaticResource FormLabelStyle}" HorizontalOptions="Center" />
                <Button x:Name="RegisterButton" Text="Zarejestruj" Style="{StaticResource ConfirmButtonStyle}" Clicked="RegisterButton_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>